<resources>

    <style name="Theme.Bacon" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>

        <item name="android:windowExitTransition">@android:transition/explode</item>
    </style>

    <style name="Theme.Bacon.Text.ActionBar.Title" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/roboto_slab</item>
    </style>

    <style name="Theme.Bacon.Text.BaseText" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="Theme.Bacon.Text.Title" parent="@style/Theme.Bacon.Text.BaseText">
        <item name="android:fontFamily">@font/roboto_slab</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Theme.Bacon.Text.Subheading" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/roboto_slab</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Bacon.Text.SubSubheading" parent="@style/Theme.Bacon.Text.Subheading">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey700</item>
    </style>

    <style name="Theme.Bacon.Text.Highlighted" parent="@style/Theme.Bacon.Text.BaseText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondaryColor</item>
    </style>

    <style name="Theme.Bacon.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Bacon.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
